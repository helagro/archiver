{
    "folders": [
        {
            "path": "/Users/h/Downloads",
            "rules": [
                {
                    "pattern": ".+\\.pdf",
                    "archiveAfterDays": 50
                },
                {
                    "pattern": ".+\\.(dmg|app|pkg)",
                    "archiveAfterDays": 10,
                    "justDelete": true
                },
                {
                    "pattern": ".+",
                    "archiveAfterDays": 28
                }
            ]
        },
        {
            "path": "/Users/h/Documents",
            "rules": [
                {
                    "pattern": "<folder>",
                    "archiveAfterDays": 90
                }
            ]
        },
        {
            "path": "/Users/h/Pictures",
            "rules": [
                {
                    "pattern": ".+",
                    "archiveAfterDays": 30
                }
            ]
        },
        {
            "path": "/Users/h/Desktop",
            "rules": [
                {
                    "pattern": ".+",
                    "archiveAfterDays": 30
                }
            ]
        },
        {
            "path": "/Users/h/Documents/obsidian/_TMP",
            "rules": [
                {
                    "pattern": ".+",
                    "archiveAfterDays": 60
                }
            ]
        },
        {
            "path": "/Users/h/Documents/obsidian",
            "rules": [
                {
                    "pattern": "/Users/h/Documents/obsidian/Untitled( [0-9]+)?\\.md",
                    "archiveAfterDays": 0
                }
            ]
        },
        {
            "path": "/Users/h/backups",
            "rules": [
                {
                    "pattern": ".+",
                    "archiveAfterDays": 30
                }
            ]
        }
    ],
    "exclude": [
        ".*/\\.DS_Store",
        ".*/\\.localized",
        ".*/scripts",
        ".*/Photos Library\\.photoslibrary",
        ".*/wallpaper\\.jpg"
    ],
    "defaultRules": [],
    "archiveType": "mega",
    "archiveSettings": {
        "email": "helagro@outlook.com"
    }
}